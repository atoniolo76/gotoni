FROM registry.fly.io/orgo-image-repo:latest

# Install Docker and required dependencies for Debian
RUN apt-get update && apt-get install -y \
    apt-transport-https \
    ca-certificates \
    curl \
    gnupg \
    lsb-release \
    software-properties-common \
    && rm -rf /var/lib/apt/lists/*

# Add Docker's official GPG key
RUN curl -fsSL https://download.docker.com/linux/debian/gpg | gpg --dearmor -o /usr/share/keyrings/docker-archive-keyring.gpg

# Add Docker repository for Debian
RUN echo \
    "deb [arch=$(dpkg --print-architecture) signed-by=/usr/share/keyrings/docker-archive-keyring.gpg] https://download.docker.com/linux/debian \
    $(lsb_release -cs) stable" | tee /etc/apt/sources.list.d/docker.list > /dev/null

# Install Docker CE
RUN apt-get update && apt-get install -y \
    docker-ce \
    docker-ce-cli \
    containerd.io \
    docker-buildx-plugin \
    docker-compose-plugin \
    && rm -rf /var/lib/apt/lists/*

# Create docker group and add appropriate user
RUN groupadd -f docker

# Add the primary user to docker group (try common usernames)
RUN id -u ubuntu >/dev/null 2>&1 && usermod -aG docker ubuntu || \
    id -u user >/dev/null 2>&1 && usermod -aG docker user || \
    id -u root >/dev/null 2>&1 && usermod -aG docker root || \
    echo "No suitable user found for docker group"

# Start Docker daemon on container startup
CMD ["dockerd"]
